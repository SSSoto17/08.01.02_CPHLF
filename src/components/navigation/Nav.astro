<script>

    // MOBILE NAV

    const burger = document.querySelector("ul.burger");
    const mobileNav = document.querySelector("ul.mobile");

    burger.addEventListener("click", () => {
        burger.classList.toggle("active");
        mobileNav.classList.toggle("active");
    })

    // LANGUAGE SELECTION

    const language = document.querySelectorAll(".lang");

    language.forEach((element) => {
        element.addEventListener("click", () => {
            document.querySelector(".DA").classList.remove("active");
            document.querySelector(".EN").classList.remove("active");

            element.classList.add("active");
        });
    })    
  </script>