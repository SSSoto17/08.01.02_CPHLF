<style>

    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: var(--spacing-s) var(--spacing-l);
        position: relative;
    }

    nav .logo {
        background-image: url("https://copenhagenlightfestival.org/wp-content/uploads/2023/01/Stacked-Logo-for-frontpage.png");
        background-size: 100%;
        aspect-ratio: 1000 / 550;
        width: 100px;
    }

    ul.burger {
        display: flex;
        flex-direction: column;
        gap: var(--spacing-xs);
        cursor: pointer;
        z-index: 1500;
        position: relative;
    }

    ul.burger li {
        width: 48px;
        height: 5px;
        background-color: var(--text-primary);
        border-radius: 10px;
        transition: .15s ease-in;
    }

    ul.burger.active li:nth-child(1) {
        transform: rotate(35deg);
        position: absolute;
    }    

    ul.burger.active li:nth-child(2) {
        opacity: 0;
    }

    ul.burger.active li:nth-child(3) {
        transform: rotate(-35deg);
        position: absolute;
    }

    ul.mobile, ul.desktop {
        display: none;
    }

    ul.mobile.active {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: var(--spacing-l);
        background-color: rgba(23, 10, 50, .95);
        z-index: 1000;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;        
        padding: var(--spacing-xxl);
        padding-top: 80px;
    }

    ul.mobile li, ul.desktop li {
    list-style: none;
    text-transform: uppercase;
    font-weight: 500;
    font-size: 1.25rem;
    }

    a {
        display: flex;
        gap: var(--spacing-s);  
    }

    a img {
        width: var(--spacing-xs);
        transform: rotate(90deg);
    }

    span {
        cursor: pointer;
    }

    span.active {
        border-bottom: 4px solid;
        border-image: var(--gradient-hot) 1;
        font-weight: 800;
    }

@media (min-width: 900px) {
    nav {
    padding: var(--spacing-l);
}

ul.burger, ul.mobile, ul.mobile.active {
    display: none;
}
nav ul.desktop {
