<div id="banner">
    <a href="/installations">
        <div class="link visitors">
            <div class="text_section">
                <h1 class="tagline">
                    Visit the Festival
                </h1>
                <img src="img/arrow.svg" alt="arrow" class="arrow">
            </div>            
        </div>
    </a>
    <a href="#">
        <div class="link sponsors">
            <div class="text_section">
                <h1 class="tagline">
                    Become a Sponsor
                </h1>
                <img src="img/arrow.svg" alt="arrow" class="arrow">
            </div>            
        </div>
    </a>
    <a href="#">
        <div class="link artists">
            <div class="text_section">
                <h1 class="tagline">
                    Exhibit at the Festival
                </h1>
                <img src="img/arrow.svg" alt="arrow" class="arrow">
            </div>            
        </div>
    </a>
</div>

<style>
    #banner {
        grid-column: 1 / 13;
        display: grid;
        grid-template-columns: repeat(8, 1fr);
        overflow: hidden;
        border: var(--spacing-1) var(--stroke-light) solid;
        border-radius: var(--spacing-xxs);
        margin: var(--spacing-xxl) 0;
    }

    a {
    display: contents;
    }

    .text_section {
        position: absolute;    
        left: 64px;
        bottom: var(--spacing-m);    
        display: flex;
        align-items: center;
        gap: var(--spacing-xs);
        max-width: 208px;
        z-index: 10;
        transition: .15s ease-in;
    }

    h1.tagline {
        font-size: 2rem;
        font-weight: 500;
    }

    .link {
        position: relative;
        background-color: var(--stroke-light);
        grid-row: 1;
        transition: .15s ease-in;
        background-blend-mode: darken;
        
    }

    .arrow {
        width: var(--spacing-s);
    }

    .visitors {        
        grid-column: 1 / 4;
        clip-path: polygon(0 0,100% 0,69% 100%,0 100%);
    }

    .visitors::after {
        content: "";
        background-image: linear-gradient(rgba(37, 16, 83, .25), rgba(37, 16, 83, .25)), url("img/04_bron.jpg");
        background-position: 30% 50%;
        background-size: cover;
        width: 418px;
        height: 280px;
        clip-path: polygon(0 0,100% 0,69% 100%,0 100%);
        position: absolute;
        right: 2px;
    }

    .visitors .text_section {
        left: 40px;
    }

    .sponsors {        
        grid-column: 3 / 7;
        clip-path: polygon(25% 0,100% 0,75% 100%,0 100%);
        aspect-ratio: 3500 / 1750;
    }

    .sponsors::after {
        content: "";
        background-image: linear-gradient(rgba(37, 16, 83, .25), rgba(37, 16, 83, .25)), url("img/76_tetra.jpg");
        background-size: cover;
        background-position: 50% 75%;               
        width: 556px;
        height: 280px;
        clip-path: polygon(25% 0,100% 0,75% 100%,0 100%);
        position: absolute;
        left: 2px;
    }

    .artists {        
        grid-column: 6 / 9;
        clip-path: polygon(33% 0,100% 0,100% 100%,0 100%)        
    }

    .artists::after {
        content: "";
        background-image: linear-gradient(rgba(37, 16, 83, .25), rgba(37, 16, 83, .25)), url("img/03_pixlearth.jpg");
        background-size: cover;
        width: 418px;
        height: 280px;
        position: absolute;
        right: 0;
        clip-path: polygon(33% 0,100% 0,100% 100%,0 100%)   
    }

    .visitors:hover, .sponsors:hover, .artists:hover {
        scale: 1.15;
        z-index: 5;
    }

    .visitors:hover .text_section {
        left: 56px;
        bottom: 40px;
    }

    .sponsors:hover .text_section, .artists:hover .text_section {
        bottom: 40px;
    }

</style>