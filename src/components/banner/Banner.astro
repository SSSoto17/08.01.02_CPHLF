---

import visitorImg from '../../img/04_bron.jpg'
import sponsorImg from '../../img/76_tetra.jpg'
import artistImg from '../../img/03_pixlearth.jpg'

const bannerData = [
  { text: 'Visit the Festival', path: '/installations', img: visitorImg},
  { text: 'Become a Sponsor', path: '#', img: sponsorImg},
  { text: 'Exhibit at the Festival', path: '#', img: artistImg},
]

import BannerCard from './BannerCard.astro'

---

<section>
    {bannerData.map(i => (
        <BannerCard
          text={i.text}
          path={i.path}
          img={i.img.src}
        />
      ))}
</section>

<style>
    section {
        display: flex;
        flex-direction: column;
        gap: var(--spacing-m);
        overflow: hidden;
    }

    @media (min-width: 600px) {
        section {
            grid-column: 1 / 13;
            flex-direction: row;
        }
    }

    @media (min-width: 768px) {
        section {
            display: grid;
            grid-template-columns: repeat(11, 1fr);
            gap: 0;
            border-radius: var(--spacing-xxs);
            border: 1px solid var(--glass-light);
        }
    }
</style>