<div id="search">
    <input type="search" id="searchbar" name="searchbar" placeholder="Enter keyword, artist, title or location">
    <button>
        <img src="/img/search.svg" alt="Search button">
    </button>
</div>    

<style>
    #search {
        grid-column: 1 / 3;
        display: flex;
        align-items: center;
    }

    input {
        width: 432px;
        padding: var(--spacing-s) var(--spacing-xs);        
        border-top: 1px solid var(--glass-light);
        border-bottom: 1px solid var(--glass-light);
        border-left: 1px solid var(--glass-light);
        border-right: none;
        border-radius: var(--spacing-xxs) 0 0 var(--spacing-xxs);
    }

    input, textarea {
        background-color: rgba(234, 231, 239, 0.1);
        color: var(--purple-100);
    }


    button {
        width: var(--spacing-xxl);
        height: 50px;
        background-image: var(--gradient-hot);
        border: none;
        border-radius: 0 var(--spacing-xxs) var(--spacing-xxs) 0;
        padding: var(--spacing-12);
        cursor: pointer;
        
    }

    button img {
        transition: .15s ease-in;
    }

    button:hover img {
        scale: 1.1;
    }
</style>