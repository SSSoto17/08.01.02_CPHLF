---

import FilterAccordion from '../installations/filter/FilterAccordion.astro'

---

<aside>
    <h1>Filter</h1>
    <FilterAccordion title="Location" options={["Nørrebro", "Østerbro", "Vesterbro", "Sydhavn", "Ørestad"]}/>
    <FilterAccordion title="Year" options={["Upcoming", "Current", "Archive"]} />
</aside>

<style>
    aside {
        grid-column: 1 / 4;
        padding: var(--spacing-m) 0;
        display: flex;
        flex-direction: column;
        gap: var(--spacing-m)
    }

    h1 {
        font-size: 32px;
        font-weight: 700;
        line-height: 32px;
    }
</style>

<script>
    const filterAcc = document.querySelectorAll("FilterAccordion");
</script>